@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciador de Tarefas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">   
</head>
<body>
    <h1>Lista de Tarefas</h1>
    <form id="taskForm">
        <input type="text" id="taskInput" placeholder="Adicionar uma nova tarefa..." maxlength="40" required>
        <button type="submit">Adicionar Tarefa</button>
    </form>
    <button id="toggleTableBtn" style="margin-bottom: 20px;">Listar Tarefas</button>
    
    <table id="taskList" class="table" style="display: none;">
        <thead>
            <tr>
                <th scope="col">Qtd</th>
                <th scope="col">Nome da Tarefa</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>            
        </tbody>
    </table> 

    <div id="spinner" class="d-flex justify-content-center">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden"></span>
        </div>
    </div>
</body>
</html>